{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true, // true로 설정하면 JS에서도 타입 체크 가능
    "noEmit": true, // JS와 TS의 빌드 출력을 방지 (Vite 사용 시 필요 없음)
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node", // 모듈 해석 방법 지정
    "esModuleInterop": true // ES6 모듈 호환성 활성화
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
